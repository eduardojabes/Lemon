{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@startup": ["./bootstrap/startup"],
      "@modules/*": ["./modules/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["src/**/*"],
}
